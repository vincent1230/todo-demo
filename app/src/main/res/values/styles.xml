<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- This style defines the tint color of the overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleInput" parent="DefaultEditText">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="DescInput" parent="DefaultEditText">
        <item name="android:gravity">start|top</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>


    <style name="AttributeText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/attribute_font_size</item>
        <item name="android:padding">@dimen/attribute_text_padding</item>
        <item name="android:layout_marginStart">-35dp</item>
    </style>

</resources>
