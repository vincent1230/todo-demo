<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tasks_fragment_dest">

    <fragment
        android:id="@+id/tasks_fragment_dest"
        android:name="com.example.tododemo.tasks.TasksFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_tasks_fragment_dest_to_tasks_fragment_edit"
            app:destination="@id/tasks_fragment_edit"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/tasks_fragment_edit"
        android:name="com.example.tododemo.taskdetail.TaskDetailFragment"
        android:label="@string/app_name">
        <argument
            android:name="entryid"
            app:argType="string" />
    </fragment>
</navigation>
